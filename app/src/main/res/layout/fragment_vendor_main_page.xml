       android:background="#f5f5dc"
       android:id="@+id/relative"
       android:orientation="vertical"
       android:layout_gravity="right"
       android:gravity="right">


       <!--</android.support.v7.widget.RecyclerView>-->
       <LinearLayout
           android:layout_gravity="right"
