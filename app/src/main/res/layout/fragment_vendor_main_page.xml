           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/mainVendorTitle"
               android:text=""
               android:textSize="25dp"
               android:textStyle="bold"
               android:layout_marginTop="5dp"
               android:textColor="#0d0d0d"
               />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text="  مرحبا  "
    android:textSize="25dp"
    android:layout_marginTop="5dp"
    android:textColor="#0d0d0d"
    />

