<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kesho.cwsfinancepetrojet.underReview"
    android:layout_gravity="right"
    android:gravity="right">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:gravity="right"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vendorTitleReview"
        android:text=""
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="#0d0d0d"
        android:layout_gravity="right"
        android:gravity="right"
        />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noDocForReview"
        android:text="لا توجد اذون تحت المراجعة لشركتكم حاليا"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="#0d0d0d"
        android:layout_gravity="right"
        android:gravity="right"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSearchByPo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_gravity="left"
                android:text="بحث" />

            <EditText
                android:id="@+id/searchEditTextReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:textSize="15dp"
                android:inputType="number"
                android:hint="ادخل رقم امر التوريد باللغة الانجليزية" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noResults"
            />
   <ListView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/usnderReviewListViewId">

   </ListView>
    </LinearLayout>

</FrameLayout>
